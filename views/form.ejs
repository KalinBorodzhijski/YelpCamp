<%- include("partials/header") %>
<div class = "container">
	

		<h1 class = "text-center">
			Add campground	
		</h1>
	
	<div class="form">
		
		<form  action = "/campgrounds" method = "POST">
			<div class= "form-group">
				<input type="text"  class="form-control" placeholder = "Name" name = "name">
			</div>
			<div class= "form-group">
				<input type="text"  class="form-control" placeholder = "Photo URL" name = "photo">
			</div>
			<div class= "form-group">
				<input type="number" class="form-control" step="0.01" min="0" max="50" placeholder = "Price per night" name = "price" >
			</div>
			<div class= "form-group">
				<input type="text" placeholder="description" name = "descriptions" class="form-control">
			</div>
				<button class = "btn btn-primary btn-lg">
				Submit
			</button>
			</div>
			
		</form>
		<a href ="/campgrounds">Back</a>
	</div>
</div>

<%- include("partials/footer") %>
