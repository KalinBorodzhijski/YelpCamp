<%- include("partials/header")%>

<div class="container">
    <div class="row">
        <div class="col-md-3">
            <p class="lead">YelpCamp</p>
            <div class="list-group">
                <li class="list-group-item active">info 1</li>
                <li class="list-group-item">info 2</li>
                <li class="list-group-item">info 3</li>
            </div>
            <!--map-->
        </div>
        <div class="col-md-9">
            <div class="thumbnail">
                <img src="<%= element.photo %>" class="img-responsive" alt="">
                <div class="caption-full">
                    
                    <h4 class="pull-right">$9.00/night</h4>
                    <h4><a href=""><%= element.name %></a></h4>
                    <p><%= element.descriptions %></p>
                    <p>
                        <em>Submitted by: <%= element.author.username%></em>
                    </p>
                    <% if(currentUser && element.author.id.equals(currentUser._id)){%>
                        <a href="/campgrounds/<%= element._id%>/edit" class="btn btn-warning">Edit</a>
                        <form class="deleteButton" action="/campgrounds/<%= element._id%>?_method=DELETE" method="post">
                            <button class="btn btn-danger">Delete</button>
                        </form>
                    <% }%>
                </div>
            </div>
            <div class="well">
                <div class="text-right">
                    <a href="/campgrounds/<%= element._id%>/comments/new" class = "btn btn-primary">Add comment</a>
                </div>
                <hr>
                <% element.comments.forEach((comment) => { %>
                    <div class="row">
                        <div class="col-md-12">
                            <strong><%= comment.author.username %></strong>
                            <span class="pull-right">10 days ago</span>
                            <p>
                                <%= comment.text%>
                            </p>
                            <%if(currentUser && comment.author.id.equals(currentUser._id)){%>
                                <a href="/campgrounds/<%= element._id%>/comments/<%= comment._id %>/edit" class="btn btn-xs btn-warning">Edit</a>
                                <form class="deleteButton" action="/campgrounds/<%= element._id%>/comments/<%= comment._id %>?_method=DELETE" method="post">
                                    <button class="btn btn-xs btn-danger">Delete</button>
                                </form>
                                <%}%>
                                
                           
                            
                        </div>
                    </div>
                    
                
                <% }); %>
                
            </div>
        </div>
    </div>
</div>




<%- include("partials/footer") %>